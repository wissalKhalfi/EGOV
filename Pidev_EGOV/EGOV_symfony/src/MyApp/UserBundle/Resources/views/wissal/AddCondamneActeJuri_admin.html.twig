{% extends 'MyAppUserBundle:wissal:baseWissal.html.twig' %}

{% block content %}
    <section id="headline">
    <div class="container  text-center">
        <h3>Gestion des B3</h3>
    </div>
</section>


<section class="section">
    <div class="container ">
        <div class="col-lg-12 __web-inspector-hide-shortcut__">
            <section class="panel">
                <section class="panel">
                    <header class="panel-heading">
                        <h2><strong>Acte numéro</strong></h2>
                    </header>

                    <div class="panel-body">
                        <form >
                            <table class="table table-striped" id="table-example">
                                <thead>
                                    <tr>

                                        <th class="text-center">Numéro cin</th>		
                                        <th  class="text-center">Nom</th>
                                        <th class="text-center">Prenom</th>
                                        <th class="text-center">Date de naissance</th>
                                        <th class="text-center">Lieu de naissance</th>
                                        <th class="text-center">Sexe</th>
                                        <th class="text-center">Adresse</th>
                                        <td> Condamner       &nbsp;&nbsp;&nbsp;&nbsp; </td>

                                    </tr>
                                </thead>
                                <tbody align="center">
                                    {% for e in citoyen %}
                                        <tr>
                                            <td> {{e.numCin}} </td>
                                            <td> {{e.nom}} </td>
                                            <td> {{e.prenom}} </td>
                                            <td> {{e.dateNaissance|date('d-m-Y')}} </td>
                                            <td> {{e.lieuNaissance}} </td>
                                            <td> {{e.sexe }} </td>
                                            <td> {{e.adresse }} </td>
                                            <td><a href="{{path("b3_condamner",{id:id,cin:e.numCin})}}">Condamner</a></td>
                                            
                                        </tr> 
                                    {% endfor %}         
                                </tbody>
                            </table>
                        </form>
                    </div>
                </section>

            </section>







        </div>		
    </div>
</section>
{% endblock %}