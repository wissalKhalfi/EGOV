{% extends 'MyAppUserBundle:wissal:baseWissal.html.twig' %}

{% block content %} 
<section id="headline">
                <div class="container  text-center">
                    <h3>Gestion des B3 --   ADMIN</h3>
                </div>
            </section>

            <section class="section">
                <div class="container ">
                    <div class="col-lg-12 __web-inspector-hide-shortcut__">
                        <section class="panel">
                            <section class="panel">
                                <header class="panel-heading">
                                    <h2><strong>Liste Actes juridique</strong></h2>
                                </header>

                                <div class="panel-body">
                                    <form>
                                        <table class="table table-striped" id="table-example">
                                            <thead>
                                                <tr>

                                                    <th class="text-center">Id acte</th>		
                                                    <th  class="text-center">Titre acte</th>
                                                    <th class="text-center">Date acte</th>
                                                    <th class="text-center">Description de l'acte</th>
                                                    <td> Condamnés      &nbsp;&nbsp;&nbsp;&nbsp; </td>

                                                </tr>
                                            </thead>
                                            <tbody align="center">
                                                {% for e in actesJuri %}
                                                    <tr>
                                                        <td>{{e.idActe}} </td>
                                                        <td> {{e.titreActe}} </td>
                                                        <td> {{e.dateActe|date('Y-m-d')}} </td>
                                                        <td> {{e.descActe}} </td>
                                                        <td><a href="{{ path ("b3_ajouter_liste_actes", {id:e.idActe})}}">Affecter condamnés </a></td>
                                                    </tr> 
                                                {% endfor %}         
                                            </tbody>
                                        </table>
                                    </form>
                                </div>
                            </section>

                        </section>







                    </div>		
                </div>
            </section>  {% endblock %}