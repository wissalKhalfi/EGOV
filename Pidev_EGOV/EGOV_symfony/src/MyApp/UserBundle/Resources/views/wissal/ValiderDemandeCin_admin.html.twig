{% extends 'MyAppUserBundle:wissal:baseWissal.html.twig' %}

{% block content %}
    <section id="headline">
        <div class="container  text-center">
            <h3>Gestion des cartes d'identités nationales</h3>
        </div>
    </section>

    <section class="section">
        <div class="container ">
            <div class="col-lg-12 __web-inspector-hide-shortcut__">
                <section class="panel">
                    <section class="panel">
                        <header class="panel-heading">
                            <h2><strong>Demande cin numéro {{DemCin.iduti}} </strong></h2>
                        </header>

                        <div class="panel-body">
                            <form>
                                <center>
                                    <table class="table table-striped" id="table-example">
                                        <thead>
                                            

                                            <tr>

                                                <th class="text-center">Id demande</th>	
                                                <td> {{DemCin.iduti}} </td>
                                            </tr>
                                            <tr>
                                                <th class="text-center">Photo</th>
                                                <td><img alt="Embedded Image" src="data:image/png;base64,{{image}}" /></td>
                                            </tr>
                                            <tr>
                                                <th  class="text-center">Nom</th>
                                                <td> {{DemCin.nom}} </td>
                                            </tr>
                                            <tr>
                                                <th class="text-center">Prenom</th>
                                                <td> {{DemCin.prenom}} </td>
                                            </tr>
                                            <tr>
                                                <th class="text-center">Date de naissance</th>
                                                <td> {{DemCin.dateNaissance|date('Y-m-d')}} </td>
                                            </tr>
                                            <tr>
                                                <th class="text-center">Sexe</th>
                                                <td> {{DemCin.sexe}} </td>
                                            </tr>
                                            <tr>
                                                <th class="text-center">Prenom pere </th>
                                                <td> {{DemCin.prenomPere}} </td>
                                            </tr>
                                            <tr>
                                                <th class="text-center">Nom pere</th>
                                                <td> {{DemCin.nomPere}} </td>
                                            </tr>
                                            <tr>
                                                <th class="text-center">Prenom mère</th>
                                                <td> {{DemCin.prenomMere}} </td>
                                            </tr>
                                            <tr>
                                                <th class="text-center">Nom mère</th>
                                                <td> {{DemCin.nomMere}} </td>
                                            </tr>
                                            <tr>
                                                <th class="text-center">Sexe</th>
                                                <td> {{DemCin.sexe}} </td>
                                            </tr>
                                            <tr>
                                                <th class="text-center">Statut social</th>
                                                <td> {{DemCin.statutSocial}} </td>
                                            </tr>
                                            <tr>
                                                <th class="text-center">Adresse</th>
                                                <td> {{DemCin.adresse}} </td>
                                            </tr>
                                            <tr>
                                                <th class="text-center">Profession</th>
                                                <td> {{DemCin.profession}} </td>
                                            </tr>
                                            
                                            <tr> 
                                                <td align="center">   
                                                    <button class="btn" type="button" type="submit" value="Valider" >
                                                        <a href="{{ path ("Cin_validation_demandes_accepted", {id:DemCin.iduti})}}">Valider </a>
                                                    </button>  
                                                </td>
                                                <td align="center"> 
                                                    <button class="btn" type="button" type="submit" value="Refuser">
                                                        <a href="{{ path ("Cin_validation_demandes_denied", {id:DemCin.iduti})}}">Refuser </a>
                                                    </button>
                                                </td>
                                            </tr>


                                        </thead>


                                    </table>
                                </center>
                            </form>
                        </div>
                    </section>

                </section>







            </div>		
        </div>
    </section>
{% endblock %}