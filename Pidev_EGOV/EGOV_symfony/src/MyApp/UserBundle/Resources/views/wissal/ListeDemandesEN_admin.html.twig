{% extends 'MyAppUserBundle:wissal:baseWissal.html.twig' %}

{% block content %}
    <section id="headline">
        <div class="container  text-center">
            <h3>Extraits de naissance</h3>
        </div>
    </section>
    <section class="panel">
        <header class="panel-heading">
            <h2><strong>Liste demandes d'extraits de naissance</strong></h2>
        </header>

        <div class="panel-body">
            <form>
                <table class="table table-striped" id="table-example">
                    <thead>
                        <tr>

                            <th class="text-center">Id demande</th>		
                            <th  class="text-center">Nom</th>
                            <th class="text-center">Prenom</th>
                            <th class="text-center">Date de naissance</th>
                            <td> Valider       &nbsp;&nbsp;&nbsp;&nbsp; </td>

                        </tr>
                    </thead>
                    <tbody align="center">
                        {% for e in demandesEN %}
                            <tr>
                                <td>{{e.iduti}} </td>
                                <td> {{e.nom}} </td>
                                <td> {{e.prenom}} </td>
                                <td> {{e.dateNaissance|date('Y-m-d')}} </td>
                                <td><a href="{{ path ("ExtraitNaiss_validation_demandes", {id:e.iduti})}} ">Valider</a></td>
                            </tr> 
                        {% endfor %}         
                    </tbody>
                </table>
            </form>
        </div>
    </section>
{% endblock %}