         <td>{% if p.utilisateur.id_contrat is defined %}
{{ p.utilisateur.id_contrat }}
{% endif %}</td>
        <td>{{p.validation}}</td>
        
        <td><a class="btn btn-sm btn-default edit_link" href="{{ path('admin_show_contrat', { 'id_contrat' : p.id_contrat }) }}"><i
                class="fa fa-download"></i>show</a>
             
                <a class="btn btn-sm btn-default edit_link" href="{{ path('valider_contrat', { 'id_contrat' : p.id_contrat }) }}"><i
                class="fa fa-download"></i>Valider</a>
                {% if  p.validation=="non validÃ©" %} 
                   
