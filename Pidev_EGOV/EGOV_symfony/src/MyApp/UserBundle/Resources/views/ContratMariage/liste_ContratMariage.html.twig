{% extends "::base.html.twig" %}




{% block body -%}
<div class="container">
          
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Prenom</th>
        <th>Num cin</th>
         <th>Num passeport</th>
        <th>Validation</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
        {% if contratmariage|length != 0 %}
       
        {% for p in contratmariage %}

      <tr>
        <td>{% if p.utilisateur.nom is defined %}
             {{ p.utilisateur.nom }}
                {% endif %}</td>
        <td>{% if p.utilisateur.prenom is defined %}
{{ p.utilisateur.prenom }}
{% endif %}</td>
        <td>{% if p.utilisateur.numCin is defined %}
{{ p.utilisateur.numCin }}
