{% extends "MyAppUserBundle::layout1.html.twig" %}

{% block formulaire %}
    <body class="fa-sign-in">
        <div id="wrapper">

            <div id="loading-top">
                <div id="canvas_loading"></div>
                <span>Checking...</span>
            </div>

            <div id="main">
                <div class="real-border">
                    <div class="row">
                        <div class="col-xs-1"></div>
                        <div class="col-xs-1"></div>
                        <div class="col-xs-1"></div>
                        <div class="col-xs-1"></div>
                        <div class="col-xs-1"></div>
                        <div class="col-xs-1"></div>
                        <div class="col-xs-1"></div>
                        <div class="col-xs-1"></div>
                        <div class="col-xs-1"></div>
                        <div class="col-xs-1"></div>
                        <div class="col-xs-1"></div>
                        <div class="col-xs-1"></div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">

                            <div class="account-wall">
                                <section class="align-lg-center">
                                    <div class="site-logo"></div>
                                    <h1 class="login-title"><span>sign</span>up <small>E-GOV SIGN-UP</small></h1>
                                    <br>
                                </section>
                                <form id="validate-wizard" class="wizard-step shadow" action="{{path ('fos_user_registration_register')}}" {{form_enctype(form)}} method="POST">
                                    <div class="col-md-4"></div>
                                    <div class="col-md-6">

                                        <div class="form-group col-md-12">
                                            <label class="col-md-2">Uername</label>
                                            <div class="col-md-6">
                                                {{ form_widget(form.username,{'attr': {'class': 'form-control'}})}}
                                            </div>
                                        </div>
                                            <div class="form-group col-md-12">
                                                <label class="col-md-2">email</label>
                                                <div class="col-md-6">
                                                    {{ form_widget(form.email,{'attr': {'class': 'form-control'}})}}
                                                </div>
                                            </div>
                                            <div class="form-group col-md-12">
                                                <label class="col-md-2">nom</label>
                                                <div class="col-md-6">
                                                    {{ form_widget(form.nom,{'attr': {'class': 'form-control'}})}}
                                                </div>

                                            </div>
                                            <div class="form-group col-md-12">
                                                <label class="col-md-2">prenom</label>
                                                <div class="col-md-6">
                                                    {{ form_widget(form.prenom,{'attr': {'class': 'form-control'}})}}
                                                </div>
                                            </div>
                                           <div class="form-group col-md-12">
                                                <label class="col-md-2">type</label>
                                                <div class="col-md-6">
                                                    {{ form_widget(form.roles,{'attr': {'class': 'form-control'}})}}
                                                </div>
                                            </div>
                                     <div class="form-group col-md-12">
                                                <label class="col-md-2">mot passe</label>
                                                <div class="col-md-6">
                                                    {{ form_widget(form.plainPassword.first,{'attr': {'class': 'form-control'}})}}
                                                </div>
                                            </div>
                                                 <div class="form-group col-md-12">
                                                <label class="col-md-2">Verificatio mot passe</label>
                                                <div class="col-md-6">
                                                    {{ form_widget(form.plainPassword.second,{'attr': {'class': 'form-control'}})}}
                                                </div>
                                            </div>
                                    </div>
                                                <div class="col-md-2"></div>


                                                <p class="signin button"> 
                                                        {{ form_widget(form._token) }}
                                                    <input type="submit" class="btn btn-lg btn-theme-inverse btn-block"  value="{{ 'registration'|trans }}" />
                                                </p>
                                                <p class="change_link">  
                                                    Already a member ?
                                                    <a href="{{path ('fos_user_security_login')}}" class="to_register"> Go and log in </a>
                                                </p>
                                                </form>
                                                <section class="clearfix align-lg-center">
                                                    <i class="fa fa-sign-in"></i> Return to <a href="{{path('fos_user_security_login')}}">Login</a>
                                                </section>	
                                                <section class="clearfix align-lg-center">
                                                    <i class="fa fa-sign-in"></i> Or return to <a href="{{ path('fos_user_security_login')}}">home</a>
                                                </section>	

                                            </div>	
                                            <!-- //account-wall-->

                                        </div>
                                        <!-- //col-sm-6 col-md-4 col-md-offset-4-->
                                    </div>
                                    <!-- //row-->
                            </div>
                            <!-- //container-->

                        </div>
                        <!-- //main-->


                    </div>

                {% endblock formulaire %}
