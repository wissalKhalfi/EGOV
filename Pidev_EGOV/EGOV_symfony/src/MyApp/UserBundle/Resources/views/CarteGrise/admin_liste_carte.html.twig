
{% extends "::base.html.twig" %}




{% block body -%}
<div class="container">
    

     <form method="POST" action="{{path ('carte_rech')}}" >
        <div class="input-append">

            <div class="input-group custom-search-form">
                <input type="text" class="form-control" placeholder="Entrer le Code du carte" idCarteGrise="idCarteGrise" name="idCarteGrise">
                                <span class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                   Rechercher
                                </button>
                            </span>
            </div>

        </div>

    </form>
          
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Prenom</th>
        <th>Email</th>
         <th>Numero Carte Grise</th>
        <th>Validation</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
        {% if carte|length != 0 %}
       
        {% for c in carte %}
      <tr>
          {%if c.utilisateur%}{
        <td>{{c.utilisateur.nom}}</td>
        <td>{{c.utilisateur.prenom}}</td>
        <td>{{c.utilisateur.email}}</td>
         <td>{{c.idCarteGrise}}</td>
        <td>{{c.validation}}</td>
        
        <td><a class="btn btn-sm btn-default edit_link" href="{{ path('show_carte_grise_admin', { 'idCarteGrise' : c.idCarteGrise }) }}"><i
                class="fa fa-download"></i>show</a>
        
        
             
              
                 <a class="btn btn-sm btn-default edit_link" href="{{ path('valider_carte', { 'idCarteGrise' : c.idCarteGrise }) }}"><i
                class="fa fa-download"></i>Valider</a>
                {% if  c.validation=="non valid√©" %} 
                   
               <a class="btn btn-sm btn-default edit_link" href="{{ path('supprimer_carte_grise', { 'idCarteGrise' : c.idCarteGrise }) }}"><i
                class="fa fa-download"></i>annuler</a>
                
          {%endif%}
         
        </td>
        {%endif%}

      </tr> 
        {%endfor%}
        
        {%else%}
            <tr><td colspan="5" >  Aucune carte grise! </td><td></td></tr>{%endif%}
      
    </tbody>
  </table>
</div>


{% endblock %}