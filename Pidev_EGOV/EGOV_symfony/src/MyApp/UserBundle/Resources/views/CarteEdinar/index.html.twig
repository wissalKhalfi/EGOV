{% extends '::base.html.twig' %}

{% block body -%}
    <h1>CarteEdinar list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Numcarte</th>
                <th>Codecarte</th>
                <th>Soldeactuel</th>
                <th>Datedernierretirement</th>
                <th>Dernierretirement</th>
                <th>Datecreation</th>
                <th>Datedernierversement</th>
                <th>Dernierversement</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('carteedinar_show', { 'id': entity.numCarte }) }}">{{ entity.numCarte }}</a></td>
                    <td>{{ entity.codeCarte }}</td>
                     <td>{{ entity.soldeActuel }}</td>
                     <td>{% if entity.dateDernierRetirement %}{{ entity.dateDernierRetirement|date('Y-m-d H:i:s') }}{% endif %}</td>
                     <td>{{ entity.dernierRetirement }}</td>
                     <td>{% if entity.dateCreation %}{{ entity.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
                     <td>{% if entity.dateDernierVersement %}{{ entity.dateDernierVersement|date('Y-m-d H:i:s') }}{% endif %}</td>
                     <td>{{ entity.dernierVersement }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('carteedinar_show', { 'id': entity.numCarte }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('carteedinar_edit', { 'id': entity.numCarte }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('carteedinar_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
