        $(function () {
            $('#datetimepicker1').datetimepicker();
        });
    </script>
{% endblock %}


{% block body -%}

    <h4>Ajouter Permis</h4>
    <form action="{{path('edit_permis_user')}}" method="POST"> 


        <table>   
            <tr height="50">


            <div class="col-sm-4">                     
                <td> <label for="exampleSelect1">categories Permis</label></td>
                <td>{{ form_widget(form.categoriePermis, {'attr': {'class':'form-control'}}) }}</td>


            </div>  
        </tr><tr height="50">

    <div class="col-sm-4">

        <td>  <label>Date Creation Permis</label></td>
        <td>     <div class='input-group date' id='datetimepicker1'>
