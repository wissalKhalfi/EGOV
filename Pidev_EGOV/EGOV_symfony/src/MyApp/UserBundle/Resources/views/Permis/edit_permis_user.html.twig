                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </td>
    </div>

    </tr>


    <tr height="50">
    <div class="col-sm-4">
        <td><label>Date Validation Permis</label></td>
        <td><div class='input-group date' id='datetimepicker1'>
                {{ form_widget(form.dateValiditePermis, {'attr': {'class':'form-control'}}) }}

